<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_spacing">

        <TableRow>

            <TextView
                android:id="@+id/act_show_bill_name_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_marginEnd="@dimen/min_spacing"/>

            <TextView
                android:id="@+id/act_show_bill_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/act_show_bill_amount_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:layout_marginEnd="@dimen/min_spacing"/>

            <TextView
                android:id="@+id/act_show_bill_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/act_show_bill_due_date_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/due_date"
                android:layout_marginEnd="@dimen/min_spacing"/>

            <TextView
                android:id="@+id/act_show_bill_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/act_show_bill_init_date_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start"
                android:layout_marginEnd="@dimen/min_spacing"/>

            <TextView
                android:id="@+id/act_show_bill_init_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/act_show_bill_end_date_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end"
                android:layout_marginEnd="@dimen/min_spacing"/>

            <TextView
                android:id="@+id/act_show_bill_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"/>

        </TableRow>

    </TableLayout>
</LinearLayout>