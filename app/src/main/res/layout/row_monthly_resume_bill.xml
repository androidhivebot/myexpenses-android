<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              style="@style/ResumeRowCell">

	<TextView
		android:id="@+id/row_monthly_resume_bill_day"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/min_spacing"/>

	<TextView
		android:id="@+id/row_monthly_resume_bill_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginEnd="@dimen/min_spacing"/>

	<TextView
		android:id="@+id/row_monthly_resume_bill_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/value_unpaid"/>

</LinearLayout>