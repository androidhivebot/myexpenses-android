<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/default_spacing"
		android:orientation="vertical">

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TableRow>

				<TextView
					android:id="@+id/act_show_account_name_stt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/name"
					android:layout_marginEnd="@dimen/min_spacing"/>

				<TextView
					android:id="@+id/act_show_account_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/color_primary"/>

			</TableRow>

	        <TableRow>

	            <TextView
	                android:id="@+id/act_show_account_balance_stt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/balance"
	                android:layout_marginEnd="@dimen/min_spacing"/>

	            <TextView
	                android:id="@+id/act_show_account_balance"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/color_primary"/>

	        </TableRow>

	        <TableRow>

	            <TextView
	                android:id="@+id/act_show_account_balance_date_stt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/date_of_balance"
	                android:layout_marginEnd="@dimen/min_spacing"/>

	            <TextView
	                android:id="@+id/act_show_account_balance_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/color_primary"/>

	        </TableRow>

			<TableRow>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/account_to_pay_credit_card"
					android:layout_marginEnd="@dimen/min_spacing"/>

				<TextView
					android:id="@+id/act_show_account_to_pay_credit_card"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/color_primary"/>

			</TableRow>
	    </TableLayout>

	    <TextView
	        style="@style/HeaderTitle"
	        android:text="@string/month_transactions"
	        android:layout_marginTop="@dimen/default_spacing"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/act_show_account_transactions"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/default_spacing">

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/month_balance"
					android:textStyle="bold"
					android:layout_marginEnd="@dimen/min_spacing"/>

				<TextView
					android:id="@+id/act_show_account_month_balance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"/>

			</TableRow>
		</TableLayout>

		<TextView
			style="@style/HeaderTitle"
			android:text="@string/next_month_transactions"
			android:layout_marginTop="@dimen/default_spacing"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/act_show_account_next_month_transactions"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"/>

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/default_spacing">

			<TableRow>

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/next_month_balance"
					android:textStyle="bold"
					android:layout_marginEnd="@dimen/min_spacing"/>

				<TextView
					android:id="@+id/act_show_account_next_month_balance"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"/>

			</TableRow>
		</TableLayout>
	</LinearLayout>
</LinearLayout>